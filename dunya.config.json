{
  "ip": "0.0.0.0",
  "port": 8080,

  "pipes": {
    "dev": {
      "plugins": ["#inline-script", "#sass-support"],
      "inputDir": "dev-",
      "outputDir": "docs"
    },
    "dev-ns": {
      "plugins": ["#inline-script", "#sass-support"],
      "inputDir": "dev",
      "outputDir": "dev-",
      "noServer": true
    },
    "optimize": {
      "plugins": ["#inline-script-optimizations"],
      "inputDir": "dev-",
      "outputDir": "docs"
    },
    "optimize-ns": {
      "plugins": ["#inline-script-optimizations"],
      "inputDir": "dev-",
      "outputDir": "docs",
      "noServer": true
    },
    "build": {
      "plugins": ["#inline-script-compiler"],
      "inputDir": "docs",
      "outputDir": "output",
      "noWatcher": true,
      "noServer": true
    }
  }
}
